<%= render 'shared/title', title: 'Add Category' %>

<% if @category.errors.any? %>
  <div class='well'>
    <h4>There were some errors:</h4>
    <ul>
      <% @category.errors.full_messages.each do |error| %>
        <li>
          <%= error %>.
        </li>
      <% end%>
    </ul>
  </div>
<% end %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>  
    <%= f.submit 'Add' %>
  <% end %>
</div>